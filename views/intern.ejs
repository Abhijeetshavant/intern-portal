    <!-- JavaScript (combined from both codes) -->
    <script>
        // Mobile menu toggle (from second code)
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        // Close mobile menu when clicking on a link (from second code)
        const mobileMenuLinks = document.querySelectorAll('.mobile-menu a');
        mobileMenuLinks.forEach(link => {
            link.addEventListener('click', () => {
                mobileMenu.classList.add('hidden');
            });
        });

        // Smooth scrolling for anchor links (from second code)
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });

        // Mock data - in a real app, this would come from your backend API (from first code)
        const internData = {
            name: "Priya Sharma",
            referralCode: "priya2025",
            donationsRaised: 12450,
            rank: 3
        };

        const leaderboardData = [
            { rank: 1, name: "Ananya Patel", referralCode: "ananya2025", amount: 28700 },
            { rank: 2, name: "Riya Gupta", referralCode: "riya2025", amount: 19500 },
            { rank: 3, name: "Priya Sharma", referralCode: "priya2025", amount: 12450 },
            { rank: 4, name: "Neha Singh", referralCode: "neha2025", amount: 9800 },
            { rank: 5, name: "Divya Kumar", referralCode: "divya2025", amount: 7500 }
        ];

        // Display intern data (from first code)
        document.getElementById('internName').textContent = internData.name;
        document.getElementById('referralCode').textContent = internData.referralCode;
        document.getElementById('donationsRaised').textContent = '₹' + internData.donationsRaised.toLocaleString();

        // Display leaderboard data (from first code)
        const leaderboardTable = document.getElementById('leaderboardData');
        leaderboardData.forEach(intern => {
            const row = document.createElement('tr');
            row.className = 'hover:bg-gray-50 transition-all';
            row.innerHTML = `
                <td class="py-4 px-6">${intern.rank}</td>
                <td class="py-4 px-6 font-medium">${intern.name}</td>
                <td class="py-4 px-6">${intern.referralCode}</td>
                <td class="py-4 px-6 text-right">₹${intern.amount.toLocaleString()}</td>
            `;
            if (intern.referralCode === internData.referralCode) {
                row.classList.add('bg-purple-50');
            }
            leaderboardTable.appendChild(row);
        });
    </script>
